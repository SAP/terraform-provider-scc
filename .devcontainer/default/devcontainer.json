{
	"name": "Terraform Provider for SAP Cloud Connector",
	"image": "mcr.microsoft.com/devcontainers/go:dev-1.25",
	"features": {
		"ghcr.io/devcontainers/features/github-cli:1": {},
		"ghcr.io/devcontainers/features/terraform:1": {},
		"ghcr.io/robbert229/devcontainer-features/opentofu:1": {
			"version": "1.10.5"
		}
	},
	"customizations": {
		"vscode": {
			"settings": {},
			"extensions": [
				"golang.go",
				"HashiCorp.terraform",
				"ms-vscode.makefile-tools"
			]
		},
		"codespaces": {}
	},
	"postCreateCommand": "cp ./config/provider-config.txt ~/.terraformrc",
	"hostRequirements": {
		"memory": "4gb"
	},
	"remoteUser": "vscode"
}
